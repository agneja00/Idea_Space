{
  "ts-node": {
    "files": true,
    "transpileOnly": true
  },
  "compilerOptions": {
    "plugins": [{ "transform": "typescript-transform-paths", "afterDeclarations": true }],
    "paths": {
      "@ideanick/frontend/*": ["../frontend/*"],
      "@ideanick/shared/*": ["../shared/*"]
    },
    "outDir": "./dist",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "sourceRoot": "/",
    "resolveJsonModule": true,
    "inlineSources": true,
    "isolatedModules": false,
    "lib": ["ES2021"],
    "module": "commonjs",
    "moduleResolution": "Node",
    "target": "ES2021"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "jest.setup.ts"]
}
