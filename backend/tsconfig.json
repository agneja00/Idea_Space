{
  "compilerOptions": {
    "outDir": "./dist/backend",
    "rootDir": "../",
    "module": "commonjs",
    "target": "es2020",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@ideanick/frontend/*": ["../frontend/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "../frontend"]
}
