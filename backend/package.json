{
  "name": "@ideanick/backend",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "b": "pnpm --filter @ideanick/backend",
    "w": "pnpm --filter @ideanick/frontend",
    "dev": "cross-env NODE_ENV=development ts-node-dev --watch ./src/emails/dist,./.env --rs --exit-child ./src/index.ts",
    "test": "jest --runInBand",
    "build-emails": "shx rm -rf ./src/emails/dist && shx mkdir -p ./src/emails/dist && mjml ./src/emails/*.mjml -o ./src/emails/dist",
    "watch-emails": "mjml -w ./src/emails/*.mjml -o ./src/emails/dist",
    "copy-emails": "copyfiles ./src/emails/dist/*.html ./dist/backend",
    "build-ts": "rimraf ./dist && tsc --build ./tsconfig.build.json",
    "build": "pnpm build-ts && pnpm build-emails && pnpm copy-emails",
    "sentry-release": "cross-env NODE_ENV=production SOURCE_VERSION=%npm_package_version% BACKEND_SENTRY_DSN=%BACKEND_SENTRY_DSN% SENTRY_AUTH_TOKEN=%SENTRY_AUTH_TOKEN% sentry-cli releases new %SOURCE_VERSION% --finalize --org ideanickk --project idea-space-backend --auth-token %SENTRY_AUTH_TOKEN%",
    "sentry-sourcemaps": "cross-env NODE_ENV=production SOURCE_VERSION=%npm_package_version% BACKEND_SENTRY_DSN=%BACKEND_SENTRY_DSN% SENTRY_AUTH_TOKEN=%SENTRY_AUTH_TOKEN% sentry-cli releases files %SOURCE_VERSION% upload-sourcemaps ./dist --org ideanickk --project idea-space-backend --auth-token %SENTRY_AUTH_TOKEN%",
    "sentry": "pnpm run sentry-release && pnpm run sentry-sourcemaps",
    "start": "cross-env NODE_ENV=production node ./dist/backend/src/index.js",
    "pmd": "prisma migrate dev",
    "pmt": "dotenv -e ./.env.test prisma migrate deploy",
    "pgc": "prisma generate",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --ext .ts,.tsx .",
    "types": "pnpm -r --parallel types",
    "prettify": "pnpm -r --parallel prettify",
    "prepare": "pnpm pgc && ts-patch install -s"
  },
  "prisma": {
    "schema": "./src/prisma/schema.prisma"
  },
  "dependencies": {
    "@ideanick/frontend": "workspace:*",
    "@ideanick/shared": "workspace:*",
    "@prisma/client": "^6.12.0",
    "@sentry/core": "10.8.0",
    "@sentry/integrations": "^7.114.0",
    "@sentry/node": "^10.8.0",
    "@sentry/types": "^10.8.0",
    "@trpc/server": "^11.4.2",
    "cors": "^2.8.5",
    "cron": "^4.3.3",
    "date-fns": "^4.1.0",
    "debug": "^4.4.1",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "fast-glob": "^3.3.3",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "picocolors": "^1.1.1",
    "serialize-error": "8.1.0",
    "superjson": "^1.13.3",
    "triple-beam": "^1.4.1",
    "trpc-playground": "^1.0.4",
    "winston": "^3.17.0",
    "yaml": "^2.8.1",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@sentry/cli": "^2.52.0",
    "@types/cors": "^2.8.19",
    "@types/cron": "^2.4.3",
    "@types/debug": "^4.1.12",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.0.4",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/triple-beam": "^1.3.5",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "cross-env": "^10.0.0",
    "dotenv-cli": "^10.0.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.1.7",
    "mjml": "^4.15.3",
    "prettier": "^3.6.2",
    "prisma": "^6.12.0",
    "shx": "^0.4.0",
    "typescript-eslint": "^8.40.0"
  }
}
