{
  "name": "@ideanick/backend",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "b": "pnpm --filter @ideanick/backend",
    "w": "pnpm --filter @ideanick/frontend",
    "dev": "ts-node-dev --watch ./.env --rs --exit-child ./src/index.ts",
    "pmd": "prisma migrate dev",
    "pgc": "prisma generate",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --ext .ts,.tsx .",
    "types": "pnpm -r --parallel types",
    "prettify": "pnpm -r --parallel prettify",
    "prepare": "husky install"
  },
  "prisma": {
    "schema": "./src/prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^6.11.1",
    "@trpc/server": "^11.4.2",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "lodash": "^4.17.21",
    "superjson": "^1.13.3",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.0.4",
    "husky": "^9.1.7",
    "prisma": "^6.11.1"
  }
}
