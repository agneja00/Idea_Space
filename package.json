    "eslint-config-standard-with-typescript": "^43.0.1",
    "prettier": "^3.6.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
